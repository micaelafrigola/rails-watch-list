<%= link_to "My lists", lists_path, class: "btn btn-primary" %>
<h1>List: <%= @list.name %></h1>

<h2>Bookmarked Movies:</h2>
<ul>
  <% @bookmarked_movies.each do |movie| %>
    <li>
      <h3><%= movie.title %></h3>
      <p><%= movie.overview %></p>
      <img src="<%= movie.poster_url %>" alt="<%= movie.title %> Poster">
      <p>Rating: <%= movie.rating %></p>
      <% bookmark = Bookmark.find_by movie: movie, list: @list %>
      <p> <%= bookmark.comment %></p>
      <%= link_to "Delete", bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
