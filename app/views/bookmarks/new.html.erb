<h1>Add Bookmark to List: <%= @list.name %></h1>

<%= form_with(model: [@list, @bookmark], local: true) do |form| %>
  <div>
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>
  <%= form.submit "Add Bookmark" %>
<% end %>
